<!-- 商品详细信息 -->
<view class="order">
<view catchtap='toCategoryTap'>
  <view><text class="font">订单编号：</text>{{categoryTitle}}</view>
  <view><text class="font">订单状态：</text>{{categoryStatus}}</view> 
  <view><text class="font">顾客编号：</text>{{categoryCustomer_id}}</view> 
  <view><text class="font">顾客姓名：</text>{{categoryCustomer_name}}</view>
  <view><text class="font">顾客手机号：</text>{{categoryCustomer_phone}}</view>
  <view><text class="font">骑手编号：</text>{{categoryHelper_id}}</view> 
  <view><text class="font">骑手姓名：</text>{{categoryHelper_name}}</view>
  <view><text class="font">骑手手机号：</text>{{categoryHelper_phone}}</view>
  <view><text class="font">地址：</text>{{categoryTarget_address}}</view>
  <view><text class="font">要求：</text></view>
  <textarea class="demand" disabled="true">{{categoryContent}}</textarea>
  <view hidden="{{categoryStatus=='已送达'?'':'hid'}}"><text class="font">评价：</text></view>
  <textarea hidden="{{categoryStatus=='已送达'?'':'hid'}}" class="demand"></textarea>
  <view><text class="font">订单金额：￥</text>{{categoryAmount}}</view>
</view>
</view>
<!--pages/category/category.wxml-->
<!-- 商品分类页面 -->
<view class='container'>
  <view class="furnitures flex">

    <!--分类左侧-->
    <view class="furnitures-left">
      <block wx:for="{{categories}}" wx:for-index="furIdx" wx:for-item="furItem" wx:key="key">
        <view data-index="{{furIdx}}" class="{{furItem.active=='true'?'active':''}}" bindtap="selectTab">
          <text>{{furItem.title}}</text>
        </view>
      </block>
    </view>

    <!--分类右侧-->
    <scroll-view scroll-y="true" class="furnitures-right goods-right">
      <block wx:for="{{categories}}" wx:for-index="furIdx" wx:for-item="furItem" wx:key="key">
        <view hidden="{{furItem.active=='true'?'':'hid'}}">
        
          <!--右侧商品-->
          <block wx:for="{{furItem.category.item}}" wx:for-item="item" wx:key="key">
            <view class="furList">
              <block wx:for="{{item.furCategory}}" wx:for-item="item" wx:key="key">
                <view class="navigator outer">
                  <view bindtap='onGoodsTap' data-a="1" data-postId='{{item.postid}}'
                   data-title='{{item.title}}' data-status="{{item.status}}" data-Customer_id="{{item.Customer_id}}"
                   data-Customer_name="{{item.Customer_name}}" data-Customer_phone="{{item.Customer_phone}}"
                   data-Helper_id="{{item.Helper_id}}" data-Helper_name="{{item.Helper_name}}" data-Helper_phone="{{item.Helper_phone}}"
                   data-amount="{{item.amount}}" data-Content="{{item.Content}}" data-Target_address="{{item.Target_address}}"
                   data-Pay_status="{{item.Pay_status}}" data-Review_status="{{item.Review_status}}">
                    <text class="font">{{item.title}}</text>
                    <text>顾客姓名：{{item.Customer_name}}</text>
                    <text>骑手姓名：{{item.Helper_name}}</text>
                  </view>
                </view>
              </block>
            </view>
          </block>

        </view>
      </block>
    </scroll-view>
  </view>

</view>